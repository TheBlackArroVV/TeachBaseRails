<%= form_for [:admin, @carriage], url: admin_train_carriages_path do |form| %>
  <% if carriage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(carriage.errors.count, "error") %> prohibited this carriage from being saved:</h2>

      <ul>
      <% carriage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %><br>
    <%= form.select :type, Carriage::TYPES %>
  </div>

  <div class="field top_places">
    <%= form.label :top_places %>
    <%= form.text_field :top_places %>
  </div>

  <div class="field bottom_places">
    <%= form.label :bottom_places %>
    <%= form.text_field :bottom_places %>
  </div>

  <div class="field side_top_places" style="display: none">
    <%= form.label :side_top_places %>
    <%= form.text_field :side_top_places %>
  </div>

  <div class="field side_bottom_places" style="display: none">
    <%= form.label :side_bottom_places %>
    <%= form.text_field :side_bottom_places %>
  </div>

  <div class="field seating_places" style="display: none">
    <%= form.label :seating_places %>
    <%= form.text_field :seating_places %>
  </div>

  <div class="field">
      <%= form.label :train %>
      <%= form.collection_select :train_id, Train.all, :id, :number  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
