<%= form_for [:admin, route], html: { style: "display: #{hidden ? 'none' : 'block'}" }  do |form| %>
  <% if route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :stations %>
    <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: route.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-success' %>
  </div>
<% end %>