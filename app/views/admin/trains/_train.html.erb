<tr>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'number', train: train, hidden: true %>
  </td>
  <td><%= link_to 'Show', admin_train_path(train), class: 'btn btn-info' %></td>
  <td><%= link_to 'Edit', '', class: 'edit_train', data: {train_id: train.id} %></td>
  <td><%= link_to 'Destroy', admin_train_path(train), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
</tr>